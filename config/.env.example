# ElevenLabs (text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Weather API
WEATHER_API_KEY=your_weather_api_key_here

# Calendar API, needs calendar to be public or use a service account with access
CALENDAR_API_KEY=your_calendar_api_key_here

# Spotify API
# Get your credentials from: https://developer.spotify.com/dashboard
# 1. Create an app and copy Client ID and Client Secret
# 2. Set Redirect URI to http://127.0.0.1:8888/callback
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback

# Debug mode
DEBUG=True
